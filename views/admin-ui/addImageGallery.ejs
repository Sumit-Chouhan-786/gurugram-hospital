                        <form action="/admin/add-image-gallery" method="POST" enctype="multipart/form-data">
                            <!-- Image Input -->
                            <div class="mb-3">
                                <label for="image" class="form-label">Image</label>
                                <input type="file" class="form-control" id="image" name="galleryImage" accept="image/*"
                                    required onchange="previewImage(event)">
                            </div>

                            <!-- Image Preview -->
                            <div class="mb-3">
                                <label class="form-label">Image Preview</label>
                                <img height="100px" width="100px" id="imagePreview" src="#" alt="Image Preview"
                                    style="display: none; max-width: 100%; height: auto; border: 1px solid #ddd; padding: 5px;">
                            </div>

                            <!-- Submit Button -->
                            <button type="submit" class="btn submit_btn btn-primary mb-4">Submit</button>
                        </form>
